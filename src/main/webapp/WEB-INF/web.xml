<?xml version="1.0"  encoding="UTF-8"?>

<web-app version="3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">



  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

  <filter>
    <filter-name>EncodingRequestFilter</filter-name>
    <filter-class>ua.testing.repairagency.filter.EncodingRequestFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingRequestFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>



  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.AdminServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>MasterServlet</servlet-name>
  <servlet-class>ua.testing.repairagency.servlet.MasterServlet</servlet-class>
</servlet>

  <servlet-mapping>
    <servlet-name>MasterServlet</servlet-name>
    <url-pattern>/master</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.UserServlet</servlet-class>
  </servlet>

    <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>ua.testing.repairagency.servlet.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>DeleteServlet</servlet-name>
      <url-pattern>/user/delete</url-pattern>
      <url-pattern>/admin/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserRequestServlet</servlet-name>
        <servlet-class>ua.testing.repairagency.servlet.UserRequestServlet</servlet-class>
    </servlet>


  <servlet-mapping>
    <servlet-name>UserRequestServlet</servlet-name>
    <url-pattern>/user/newRequest</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CancelRequestServlet</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.CancelRequestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CancelRequestServlet</servlet-name>
    <url-pattern>/admin/cancelRequest</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AcceptRequestServlet</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.AcceptRequestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddCommentServlet</servlet-name>
    <servlet-class>ua.testing.repairagency.servlet.AddCommentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddCommentServlet</servlet-name>
    <url-pattern>/user/addComment</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AcceptRequestServlet</servlet-name>
    <url-pattern>/admin/acceptRequest</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>SessionLocaleFilter</filter-name>
    <filter-class>ua.testing.repairagency.filter.SessionLocaleFilter</filter-class>
    <init-param>
      <param-name>lang</param-name>
      <param-value>en</param-value>
    </init-param>
  </filter>


  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ua.testing.repairagency.filter.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SessionLocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


<!--  <error-page>-->
<!--    <error-code>500</error-code>-->
<!--    <location>/WEB-INF/view/error/Error500.jsp</location>-->
<!--  </error-page>-->

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/view/error/Error404.jsp</location>
  </error-page>
</web-app>
